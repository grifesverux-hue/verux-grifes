<script>
  let cart = [];
  function addToCart(name, price){
    cart.push({name,price});
    renderCart();
    toggleCart();
  }
  function renderCart(){
    const el=document.getElementById('cart-items');
    el.innerHTML='';
    cart.forEach(i=>{
      el.innerHTML+=`<div class='cart-item'>${i.name}<br>R$ ${i.price.toFixed(2)}</div>`;
    });
  }
  function toggleCart(){
    document.getElementById('cart').classList.toggle('active');
  }
  function checkout(){
    let total=0;
